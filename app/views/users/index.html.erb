<h1><%= User.model_name.human count: 2 %></h1>

<%= form_tag(nil, method: :get) do %>
  <div class="row mb-3">
    <div class="col">
     <%= text_field_tag 'filter[text]', @filter[:text], class: 'form-control' %>
    </div>
    <%= label_tag :filter_include_inactive, class: 'col col-form-label' do %>
      <%= check_box_tag 'filter[include_inactive]', true, @filter[:include_inactive] == 'true' %> inaktive Benutzer anzeigen 
    <% end -%>
    <div class="col-1">
      <%= submit_tag t(:filter), class: 'btn btn-primary float-end' %>
    </div>
  </div>
<% end -%>
<%= paginate @users %>

<table class="table">
  <thead>
    <tr>
      <% %w[id last_name first_name login role ldap].each do |col| %>
        <th scope="col">
          <%= order_link User.human_attribute_name(col), :users, col %>
        </th>
      <% end -%>
      <th scope="col"><%= t 'actions' %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| -%>
      <tr class="<%= 'text-muted' unless user.active? %>">
        <th scope="row"><%= user.id %></th>
        <td><%= user.last_name %></td>
        <td><%= user.first_name %></td>
        <td><%= user.login %></td>
        <td><%= User.human_enum_name :role, user.role %></td>
        <td>
          <% if user.ldap.present? -%>
            <i class="fa fa-check-square-o text-success" aria-hidden="true"></i>
          <% end -%>
        </td>
        <td>
          <%= link_to tag.i('', class: 'fa fa-pencil'), edit_user_path(user),
                remote: true, class: 'btn btn-sm btn-outline-primary' %>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>

<%= paginate @users %>

<% content_for :footer do %>
  <div class="float-end">
    <%= link_to t('.new_user'), new_user_path, remote: true, class: 'btn btn-primary' %>
  </div>
<% end %>
