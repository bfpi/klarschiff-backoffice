<% if @grouped_jobs.any? -%>
  <div id="accordion">
    <% @grouped_jobs.each do |group, jobs| -%>
      <div class="card">
        <div class="card-header" id="header-<%= (group_id = group.gsub(' ', '_')) %>">
          <button class="btn btn-link" data-toggle="collapse" data-target="#collapse-<%= group_id %>" aria-controls="collapse-<%= group_id %>">
            <%= group %>
          </button>
        </div>
        <div id="collapse-<%= group_id %>" class="collapse" aria-labelledby="header-<%= group_id %>" data-parent="#accordion">
          <table id="<%= group_id %>-table" class="table">
            <thead>
              <tr>
                <th>#</th>
                <th></th>
                <th><%= Issue.human_attribute_name(:kind) %></th>
                <th><%= Issue.human_attribute_name(:created_at) %></th>
                <th colspan="2">Haupt- und Unterkategorie</th>
                <th><%= Issue.human_attribute_name(:status) %></th>
                <th><%= Job.human_attribute_name(:status) %></th>
                <th>Aktionen</th>
              </tr>
            </thead>
            <tbody>
              <% jobs.each do |job| -%>
                <tr>
                  <td><%= job.id %></td>
                  <td></td>
                  <td><%= t "enums.issue.kind.#{(issue = job.issue).kind}" %></td>
                  <td><%= l issue.created_at.to_date  %></td>
                  <td><%= issue.category.parents&.first&.name %></td>
                  <td><%= issue.category.name %></td>
                  <td><%= image_tag issue.list_icon, title: t("enums.issue.status.#{issue.status}") %></td>
                  <td>
                    <span class="fa fa-flag<%= job.status_color %>" title="<%= t("enums.job.status.#{job.status}") %>"></span>
                  </td>
                  <td>
                  </td>
                </tr>
              <% end -%>
            </tbody>
          </table>
          <div class="row form-group">
            <div class="col-md-6">
              <div class="btn-group" role="group">
                <%= button_tag type: 'button', class: 'btn btn-sm change-status', data: { table: "#{group_id}-table", status: 0 } do %>
                  <span class="fa fa-flag text-success"></span>
                <% end -%>
                <%= button_tag type: 'button', class: 'btn btn-sm change-status', data: { table: "#{group_id}-table", status: 1 } do %>
                  <span class="fa fa-flag text-danger"></span>
                <% end -%>
                <%= button_tag type: 'button', class: 'btn btn-sm change-status', data: { table: "##{group_id}-table", status: 2 } do %>
                  <span class="fa fa-flag text"></span>
                <% end -%>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end -%>
  </div>
<% else -%>
  <div class="row"><div class="col-md-12">Keine Aufträge am ausgewählten Tag gefunden.</div></div>
<% end -%>
