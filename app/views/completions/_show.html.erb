<div class="card-body">
  <div class="row">
    <div class="col"><%= l(completion.created_at) %> (<%= completion.human_enum_name(:status) %>)</div>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to tag.i('', class: 'fa fa-check'), completion_path(completion, completion: { status: 'closed' }),
                  method: :put, remote: true, class: 'btn btn-sm btn-outline-primary' %>
      <%= link_to tag.i('', class: 'fa fa-times'), edit_completion_path(completion),
                  remote: true, class: 'btn btn-sm btn-outline-primary' %>
    </div>
  </div>
</div>
