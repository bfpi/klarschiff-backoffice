<div class="row form-group">
  <div class="col-md-12">
    <%= link_to edit_issue_path(issue.id), remote: true do %>
      <%= image_tag issue.list_icon, class: "status-icon #{issue.status}",
                                     title: Issue.human_enum_name(:status, issue.status) %>
      #<%= issue.id %><br>
      (<%= issue.address %>)
    <% end -%>
    <% if issue.priority_high? -%>
      <span class="float-right priority-icon fa fa-exclamation-triangle" title="<%= t('.high_priority') %>">
      </span>
    <% end -%>
    <% if issue.trust_level_external? -%>
      <span class="float-right trust-icon fa fa-star" title="<%= t('.trust') %>">
      </span>
    <% end -%>
  </div>
</div>
