<div class="modal-dialog modal-xl">
  <% options = { method: :post, remote: true, html: { 'data-dependencies': data_dependencies_path } } -%>
  <%= form_for @responsibility, options.merge(url: responsibilities_path) do |f| %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="modal-content">
      <div class="modal-header">
        <h1><%= Responsibility.model_name.human %> <%= t 'create' %></h1>
      </div>
      <div class="modal-body">
        <%= render partial: 'form', locals: { form: f, responsibility: @responsibility } %>
      </div>
      <div class="modal-footer">
        <%= f.submit t('action.save'), class: 'btn btn-primary offset-3 col-2' %>
        <%= f.submit t('action.save_and_close'), name: :save_and_close, class: 'btn btn-primary offset-1 col-2' %>
        <%= f.submit t('action.abort'), type: :reset, class: 'btn btn-secondary offset-1 col-2', 'data-dismiss': :modal %>
      </div>
    </div>
  <% end -%>
</div>
