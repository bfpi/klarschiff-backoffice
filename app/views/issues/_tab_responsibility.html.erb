<%= render partial: 'responsibility_actions', locals: { form: } %>

<% if (Issue::DELEGABLE_STATUSES.include? form.object.status.to_sym) && (form.object.responsibility_accepted) -%>
  <div class="row">
    <%= form.label :delegation, for: :issue_delegation_id, class: 'col-2 col-form-label' %>
    <div class="col-4">
      <%= form.select :delegation_id, options_for_select(delegations(form.object), form.object.delegation_id),
            { include_blank: '' }, disabled: form.object.closed?, class: 'form-select' %>
    </div>
  </div>
<% end -%>
