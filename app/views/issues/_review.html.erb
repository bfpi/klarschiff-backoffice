<div class="form-group row">
  <%= form.label(:kind, class: 'col-md-2 col-form-label') %>
  <div class="col-md-10">
    <%= Issue.human_enum_name(:kind, form.object.kind) %>
  </div>
  <%= form.label(:category, for: :issue_main_user_id, class: 'col-md-2 col-form-label') %>
  <div class="col-md-4">
    <%= form.object.category %>
  </div>
</div>
<div class="form-group row">
  <%= form.label(:description, class: 'col-md-2 col-form-label') %>
  <div class="col-md-10">
    <%= form.object.description %>
  </div>
</div>
<div class="form-group row">
  <%= form.label(:created_at, class: 'col-md-2 col-form-label') %>
  <div class="col-md-4">
    <%= l(form.object.created_at) %>
  </div>
  <%= form.label(:author, class: 'col-md-2 col-form-label') %>
  <div class="col-md-4">
    <%= form.object.author %>
  </div>
</div>
<div class="form-group row" style="<%= 'display: none' unless form.object.status_in_process? %>">
  <%= form.label(:expected_closure, class: 'col-md-2 col-form-label') %>
  <div class="col-md-4">
    <%= form.text_field(:expected_closure, class: 'form-control') %>
  </div>
</div>
<div class="form-group row">
  <%= form.label(:position, class: 'col-md-2 col-form-label') %>
  <div class="col-md-10">
    <div id="map" class="map"
      data-lat="<%= form.object&.position&.y %>"
      data-lon="<%= form.object&.position&.x %>"
      data-icon="<%= asset_path(form.object&.icon) %>"
      data-position-input="#issue_position"
    ></div>
  </div>
</div>
<div class="form-group row">
  <%= form.label(:address, class: 'col-md-2 col-form-label') %>
  <div class="col-md-4">
    <%= form.object.address %>
  </div>
</div>
<%= render partial: 'responsibility_actions', locals: { form: form } %>
