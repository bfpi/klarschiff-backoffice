<div id="issues-map">
  <div class="row">
    <div class="col-12">
      <div id="map" class="map"
           data-filter="<%= @filter.to_json %>"
           data-extended-filter="<%= @extended_filter %>"
           data-controller="issues">
        <%= render partial: 'map_toggle' %>
      </div>
    </div>
  </div>
</div>

<% content_for :footer do -%>
  <div class="float-end">
    <%= link_to t(:back), issues_path(filter: @filter, extended_filter: @extended_filter), class: 'btn btn-primary' %>
  </div>
<% end -%>
