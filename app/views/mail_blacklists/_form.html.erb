<%= render partial: 'errors', locals: { object: mail_blacklist } %>

<div class="row">
  <%= form.label(:active, class: 'col-2 col-form-label') %>
  <div class="col-10">
    <div class="form-check form-check-inline">
      <%= form.label(:active_true, '', class: 'form-check-label') do %>
        <%= form.radio_button :active, true %>
        <%= t(true) %>
      <% end -%>
    </div>
    <div class="form-check form-check-inline">
      <%= form.label(:active_false, '', class: 'form-check-label') do %>
        <%= form.radio_button :active, false %>
        <%= t(false) %>
      <% end -%>
    </div>
  </div>
</div>
<div class="row">
  <%= form.label(:pattern, class: 'col-2 col-form-label') %>
  <div class="col-10">
    <%= form.text_field(:pattern, class: 'form-control') %>
  </div>
</div>
<div class="row">
  <%= form.label(:source, class: 'col-2 col-form-label') %>
  <div class="col-4">
    <%= form.text_field(:source, class: 'form-control') %>
  </div>
  <%= form.label(:reason, class: 'col-2 col-form-label') %>
  <div class="col-4">
    <%= form.text_field(:reason, class: 'form-control') %>
  </div>
</div>
